<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainscreen"
    tools:context=".MainActivity">

    <TextView
        android:fontFamily="@font/taylor_caz"
        android:textColor="@color/Black"
        android:id="@+id/simplemaths"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:text="Math Games"
        android:textAllCaps="false"
        android:textSize="36dp"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="155dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageButton
            android:id="@+id/share"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            android:background="@drawable/roundedbtn"
            android:src="@drawable/baseline_share_black_36" />

        <ImageButton
            android:id="@+id/play"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            android:background="@drawable/roundedbtn"
            android:src="@drawable/baseline_play_arrow_black_36" />

        <ImageButton
            android:id="@+id/rate"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            android:background="@drawable/roundedbtn"
            android:src="@drawable/baseline_star_rate_black_36" />
    </LinearLayout>

</RelativeLayout>