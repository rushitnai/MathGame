<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Score"
    android:background="#ffffff">


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">
        <TextView
            android:textColor="@color/Black"
            android:id="@+id/activity_type"
            android:textSize="20sp"
            android:layout_weight="2"

            android:text="Multiplication"
            android:fontFamily="@font/taylor_caz"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="left"

            android:layout_marginTop="7dp"

            />
        <TextView
            android:fontFamily="@font/taylor_caz"
            android:layout_weight="3"
            android:text="level : easy"
            android:textColor="@color/Black"

            android:id="@+id/level"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="right"
            android:textStyle="italic"
            android:layout_marginTop="7dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="8"
        android:fontFamily="@font/taylor_caz"
        android:orientation="horizontal"
        android:id="@+id/truefalse">

        <ImageView
            android:layout_height="45dp"
            android:layout_weight="2"
            android:layout_marginTop="100dp"
            android:src="@drawable/correct"
            android:layout_width="0dp" />
        <TextView
            android:id="@+id/r1"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="115dp"
            android:layout_weight="2"
            android:gravity="left"
            android:text="10"
            android:fontFamily="@font/taylor_caz"
            android:textAllCaps="false"
            android:textColor="#49a101"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <ImageView
            android:layout_height="45dp"
            android:layout_weight="2"
            android:layout_marginTop="100dp"
            android:src="@drawable/incorrect"
            android:layout_width="0dp" />
        <TextView
            android:id="@+id/wrong"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:text="10"
            android:layout_marginTop="115dp"
            android:fontFamily="@font/taylor_caz"
            android:layout_weight="2"
            android:gravity="left"
            android:textAllCaps="false"
            android:textColor="#a10310"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>


    <ImageView
        android:id="@+id/score_image"
        android:layout_width="138dp"
        android:layout_height="136dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@id/truefalse"
        android:layout_marginTop="40dp"
        android:src="@drawable/totalscore_image"/>
    <TextView
        android:id="@+id/finalscore"
        android:layout_width="194dp"
        android:fontFamily="@font/taylor_caz"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="240dp"
        android:text="100"
        android:textAllCaps="false"
        android:textColor="@color/Black"
        android:textSize="32sp"
        android:textStyle="italic" />

    <TextView
        android:text="Highest Score : 250"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/score_image"
        android:textColor="@color/Black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/taylor_caz"
        android:id="@+id/highscore_tv"/>
    <ImageButton
        android:layout_below="@+id/highscore_tv"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:id="@+id/share"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:background="@drawable/button_alter"
        android:src="@drawable/baseline_share_black_36" />

    <Button
        android:textColor="@color/Black"
        android:id="@+id/play_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Play Again  "

        android:fontFamily="@font/taylor_caz"
        android:background="@drawable/button_alter"
        android:layout_below="@+id/share"
        android:layout_centerHorizontal="true"
        android:textStyle="italic"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="20dp"
        />


</RelativeLayout>